@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<h1>Bleakwind Buffet</h1>
<p>We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim. Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas. Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger! You’ve had a hard adventure and earned your loot, so spend it with us!.</p>

<div class="comboStyle">Any entree, side, and drink can be combined into a Combo with a $1 discount!!!</div>



<form id="website-menu">

    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="Search"/>

    </div>

    <div id="filters">

        <h4>Order Type</h4>
        @foreach (String category in Website.WebsiteMenu.Categories)
        {
            <label>
                <input type="checkbox" name="category" value="@category" checked="@Model.category.Contains(category)" />
                @category
            </label>

        }

        <h4>Calories</h4>
        <div>
            Between
            <input name="caloriesMin" type="number" min="0" max="1000" step="0.1" placeholder="min" value="@Model.caloriesMin" />
            and
            <input name="caloriesMax" type="number" min="0" max="1000" step="0.1" placeholder="max" value="@Model.caloriesMax" />

        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="priceMin" type="number" min="0" max="11" step="0.01" placeholder="min" value="@Model.priceMin" />
            and
            <input name="priceMax" type="number" min="0" max="11" step="0.01" placeholder="max" value="@Model.priceMax" />

        </div>

    </div>




    <div id="results">
        <h1>Search Results</h1>

        <ul class="menu-list">
            @foreach (BleakwindBuffet.Data.Interfaces.IOrderItem item in Model.filteredItems)
            {
                <li>
                    <div class="details">
                        <h4 class="list-header">@item.ToString()</h4>
                        <li>Price: @item.Price</li>
                        <li>Calories: @item.Calories</li>
                        <li>Description: @item.Description</li>
                    </div>
                </li>


            }
        </ul>
    </div>




    @*Displays the menu-items*@
    <div id="menu-items">
        <h1>Full Menu</h1>
        <div class="row">
            <div class="col-md-3">
                <h2>Entrees</h2>

                <ul class="entree-list">



                    @foreach (BleakwindBuffet.Data.Interfaces.IOrderItem item in Website.WebsiteMenu.entrees)
                    {
                        <h4 class="list-header">@item.ToString()</h4>
                        <li>Price: @item.Price</li>
                        <li>Calories: @item.Calories</li>
                        <li>Description: @item.Description</li>
                    }

                </ul>
            </div>
            <div class="col-md-3">
                <h2>Drinks</h2>

                <ul class="drink-list">

                    @{
                        int count = Website.WebsiteMenu.drinks.Count;
                        List<BleakwindBuffet.Data.Interfaces.IOrderItem> items = Website.WebsiteMenu.drinks.ToList();
                    }

                    @for (int i = 0; i < (count / 2); i++)
                    {
                        <h4 class="list-header">@items[i].ToString()</h4>
                        <li>Price: @items[i].Price</li>
                        <li>Calories: @items[i].Calories</li>
                        <li>Description: @items[i].Description</li>
                    }





